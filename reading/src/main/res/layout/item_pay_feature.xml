<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingLeft="@dimen/app_margin_16"
                                             android:paddingRight="@dimen/app_margin_12"
                                             android:paddingTop="@dimen/app_margin_12"
                                             android:paddingBottom="@dimen/app_margin_12"
                                             android:background="@color/white"
                                             android:orientation="vertical">

    <ImageView
        android:id="@+id/image_feature_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_click_read"/>

    <TextView
        android:id="@+id/tv_feature_featureName"
        style="@style/app.text.black.XL"
        android:layout_marginLeft="16dp"
        android:text="点读"
        app:layout_constraintLeft_toRightOf="@+id/image_feature_icon"
        app:layout_constraintTop_toTopOf="@+id/image_feature_icon"/>

    <TextView
        android:id="@+id/tv_feature_featureDescription"
        style="@style/app.text.gray.M"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:text="课本点读,帮助课前预习、课后复习"
        app:layout_constraintBottom_toBottomOf="@+id/image_feature_icon"
        app:layout_constraintLeft_toRightOf="@+id/image_feature_icon"/>

    <ImageView
        android:id="@+id/image_feature_isfree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_free_tag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>