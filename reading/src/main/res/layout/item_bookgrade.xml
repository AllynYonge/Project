<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
    android:paddingRight="@dimen/app_margin_8"
    android:paddingLeft="@dimen/app_margin_8"
    android:id="@+id/rl_bookGrade">

    <ImageView
        android:id="@+id/imageView4"
        android:src="@mipmap/bg_bookends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_book"/>

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignRight="@+id/imageView4"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="-8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_book_default"/>

    <TextView
        android:id="@+id/tv_bookversion_bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/imageView4"
        android:layout_marginBottom="6dp"/>

</RelativeLayout>