<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="111%w"
        >

        <TextView
            android:id="@+id/tv_dcr_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="14.2%h"
            app:layout_textSizePercent="5%h"
            android:gravity="center"
            android:text="选择扮演对象"
            android:textColor="@android:color/black" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_dcr_title"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="99%w"
            app:layout_marginBottomPercent="0.5%w"
            android:background="@android:color/white" >

               <!--  android:verticalSpacing="5dp" -->
            <GridView
                android:id="@+id/gv_dcr_roles"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:numColumns="2"
                app:layout_widthPercent="90%w"
                app:layout_heightPercent="65%h"
                android:verticalSpacing="5dp"
                app:layout_marginTopPercent="10%h" >
            </GridView>

            <Button
                android:id="@+id/btn_dcr_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/gv_dcr_roles"
                android:layout_centerHorizontal="true"
                app:layout_heightPercent="15%h"
                app:layout_widthPercent="60%w"
                app:layout_marginTopPercent="5%h"
                app:layout_textSizePercent="6%h"
                android:background="@drawable/bg_yellow_5_press"
                android:text="开始扮演"
                android:textColor="@android:color/black"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>