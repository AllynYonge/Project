<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/app_default_border"
              android:paddingRight="@dimen/app_default_border">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_breakthrough_score_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                style="@style/app.text.gray.XL"
                android:id="@+id/tv_breakthrough_view_order"
                android:background="@drawable/btn_yellow"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:text="查看排行榜"/>

            <TextView
                style="@style/app.text.gray.XL"
                android:id="@+id/tv_breakthrough_share"
                android:background="@drawable/btn_green"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:text="炫耀一下"/>
        </FrameLayout>

</LinearLayout>