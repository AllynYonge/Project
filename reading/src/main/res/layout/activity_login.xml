<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        style="@style/app.settingItem.layout">

        <TextView
            style="@style/app.settingItem.icon"
            android:id="@+id/tv_login_phone_ic"
            android:background="@drawable/ic_phone"/>

        <EditText
            android:id="@+id/tv_login_phone"
            style="@style/app.settingItem.iconText"
            android:inputType="number"
            android:maxLength="11"
            android:hint="手机号"/>

    </LinearLayout>

    <LinearLayout
        style="@style/app.settingItem.layout">

        <TextView
            style="@style/app.settingItem.icon"
            android:id="@+id/tv_login_pwd_ic"
            android:background="@drawable/ic_pwd"/>

        <EditText
            android:id="@+id/tv_login_pwd"
            style="@style/app.settingItem.iconText"
            android:inputType="textPassword"
            android:maxLength="20"
            android:hint="密码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        style="@style/app.settingItem.layout"
        android:background="@drawable/btn_login"
        android:text="登录"
        android:enabled="false"
        android:textColor="@color/btn_login_text"
        android:textSize="@dimen/text_size_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_findPwd"
            style="@style/app.text.white.M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/app_margin_24"
            android:text="找回密码"/>

        <TextView
            android:id="@+id/tv_login_register"
            style="@style/app.text.white.M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/app_margin_24"
            android:text="快速注册"/>
    </LinearLayout>
</LinearLayout>