<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:layout_heightPercent="50%w"
        app:layout_widthPercent="50%w">



        <Button
            android:id="@+id/btn_role_restart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_yellow_5"
            android:text="重新扮演"
            android:textColor="@android:color/black"
            app:layout_heightPercent="25%w"
            app:layout_marginTopPercent="5%w"
            app:layout_textSizePercent="10%w"
            app:layout_widthPercent="90%w"/>

        <Button
            android:id="@+id/btn_role_continue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/btn_role_restart"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_yellow_5"
            android:text="继续扮演"
            android:textColor="@android:color/black"
            app:layout_heightPercent="25%w"
            app:layout_marginTopPercent="5%w"
            app:layout_textSizePercent="10%w"
            app:layout_widthPercent="90%w"/>
        <Button
            android:id="@+id/btn_role_exit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_marginTopPercent="5%w"
            android:layout_below="@+id/btn_role_continue"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_white_5"
            android:text="退出"
            android:textColor="@android:color/black"
            app:layout_heightPercent="25%w"
            app:layout_textSizePercent="10%w"
            app:layout_widthPercent="90%w"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>